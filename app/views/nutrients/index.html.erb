<h1>Listing nutrients</h1>

<table>
  <tr>
    <th>Nutrient</th>
    <th>Food</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nutrients.each do |nutrient| %>
  <tr>
    <td><%= nutrient.nutrient %></td>
    <td><%= nutrient.food %></td>
    <td><%= nutrient.quantity %></td>
    <td><%= link_to 'Show', nutrient %></td>
    <td><%= link_to 'Edit', edit_nutrient_path(nutrient) %></td>
    <td><%= link_to 'Destroy', nutrient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


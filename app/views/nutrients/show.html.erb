<p id="notice"><%= notice %></p>

<% @allpairs = Nutrient.find(:all, :conditions => {:nutrient => @nutrient.nutrient}) %>

<% @allpairs.each do |nutrient| %>
	<% if nutrient.quantity > 0 %>
		<%= nutrient.food.titleize %> contains <%= nutrient.quantity %> in mg, not % <br>
	<% end %>
<% end %>


<%= link_to 'Edit', edit_nutrient_path(@nutrient) %> |
<%= link_to 'Back', nutrients_path %>
